package entidades;

public class Trabajador extends Empleado {
	private int valoracion;

	@Override
	public void calcularSueldoFinal(Empleado e) {
		// TODO Auto-generated method stub
		if(e instanceof Trabajador) {
			Trabajador t = (Trabajador)e;
			System.out.println("Soy el Empleado:  " + t.getNombre() + " y mi salario es: " + t.getSueldoBase()+t.extraValoracion(this.valoracion));
			}
	}
	
	/** Método que devuelve un entero segun la clasificación 
	 * @param v
	 * @return
	 */
	public int extraValoracion(int v) {
		int extra;
		switch(v) {
		case(0):
		case(1):
		case(2):
		case(3):
		case(4):
			extra=0;
			break;
		case(5):
		case(6):
			extra=50;
			break;
		case(7):
		case(8):
			extra=100;
			break;
		case(9):
		case(10):
			extra=200;
			break;
		default :
			extra=0;
		}
		return extra;
	}

	public int getValoracion() {
		return valoracion;
	}

	public void setValoracion(int valoracion) {
		this.valoracion = valoracion;
	}

}
