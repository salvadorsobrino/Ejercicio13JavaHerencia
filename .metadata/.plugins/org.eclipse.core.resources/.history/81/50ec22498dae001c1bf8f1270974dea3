package entidades;

import java.util.ArrayList;
import java.util.List;

public class Directivo extends Empleado{
	private List<Empleado> listaEmpleados = new ArrayList<Empleado>();

	public Directivo(String nombre, int i, List<Empleado> listaEmpleados2) {
		super(nombre, i);
		this.listaEmpleados=listaEmpleados2;
	}

	@Override
	public void calcularSueldoFinal(Empleado e) {
		if(e instanceof Directivo) {
			Directivo d = (Directivo)e;
			System.out.println("Soy el Empleado(Trabajador): " + d.getNombre() + " y mi salario es: " + (d.getSueldoBase()+(this.listaEmpleados.size()*100)));
			}
		
	}

}
