package entidades;

public class Jefe extends Empleado{
	private double incentivos;

	@Override
	public void calcularSueldoFinal(Object o) {
		// TODO Auto-generated method stub
		if(o instanceof Jefe) {
			Jefe j = (Jefe)o;

				System.out.println("Soy el empleado:  " + j.getNombre() + " y mi salario es: ");
				this.setPeso(getPeso() + 0.1); 
			}
		}
		
	}

	public double getIncentivos() {
		return incentivos;
	}

	public void setIncentivos(double incentivos) {
		this.incentivos = incentivos;
	}

}
