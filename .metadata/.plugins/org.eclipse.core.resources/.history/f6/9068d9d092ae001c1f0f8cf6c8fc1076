package entidades;

public abstract class Empleado {
	protected String nombre;
	protected Double sueldoBase;
	
	public Empleado(String nombre, Double sueldoBase) {
		this.nombre = nombre;
		this.sueldoBase = sueldoBase;
		
	}
	/** Método abstracto que recibe un Object y que calculará el sueldoFinal de cada Empleado según el tipo de Empleado que sea 
	 * 
	 * @param e Objeto que recibe el método para posteriormente castearlo
	 */
	public abstract void calcularSueldoFinal(Empleado e);
	
	public String getNombre() {
		return nombre;
	}

	public void setNombre(String nombre) {
		this.nombre = nombre;
	}
	
	public Double getSueldoBase() {
		return sueldoBase;
	}

	public void setSueldoBase(Double sueldoBase) {
		this.sueldoBase = sueldoBase;
	}
	

	
}
